<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.nmsasaki.android.mute30"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launchf"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.nmsasaki.android.mute30.FullscreenActivity"
            android:label="@string/app_display_name"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service
            android:name="ca.nmsasaki.android.mute30.WidgetService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name="ca.nmsasaki.android.mute30.ShortcutReceiver"
            android:icon="@drawable/ic_launchf"
            android:label="@string/app_display_name" 
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name=".ACTION_SHORTCUT_CLICK" />
            </intent-filter>
        </receiver>
    </application>

</manifest>