            android:name="ca.nmsasaki.silenttouch.WidgetService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name="ca.nmsasaki.silenttouch.MyWidgetProvider"
            android:icon="@drawable/ic_launchf"
            android:label="@string/widget_test_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_metadata" />
